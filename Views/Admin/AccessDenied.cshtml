@{
    Layout = null;
    Layout = "~/Views/Shared/layout2.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f4f4f4;
        }

        .access-denied {
            text-align: center;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 80%;
            max-width: 500px;
        }

            .access-denied h1 {
                font-size: 30px;
                color: #e74c3c;
            }

            .access-denied p {
                font-size: 18px;
                margin: 10px 0;
            }

        .btn {
            display: inline-block;
            padding: 10px 15px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 20px;
        }

            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="access-denied">
        <h1>Access Denied</h1>
        <p>Sorry, you do not have permission to view this page.</p>
        <a href="@Url.Action("EmpLogin", "Home")" class="btn btn-primary">Go to Login</a>
    </div>
</body>
</html>