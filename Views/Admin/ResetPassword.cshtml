@{
    Layout = null;
    Layout = "~/Views/Shared/layout2.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<body>
    <!-- ========== section start ========== -->
    <section class="section">
        <div class="container-fluid">
            <!-- ========== title-wrapper start ========== -->
            <div class="title-wrapper pt-30">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="title">
                            <h2>Change Password</h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-0 auth-row">
                <div class="col-lg-6">
                    <div class="auth-cover-wrapper bg-primary-100">
                        <div class="auth-cover">
                            <div class="title text-center">
                                <h1 class="text-primary mb-10">Change Password</h1>
                                <p class="text-medium">
                                    Reset your password to access your account.
                                </p>
                            </div>
                            <div class="cover-image">
                                <img src="~/assets/images/auth/signin-image.svg" alt="" />
                            </div>
                            <div class="shape-image">
                                <img src="~/assets/images/auth/shape.svg" alt="" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Side Form -->
                <div class="col-lg-6">
                    <div class="signin-wrapper">
                        <div class="form-wrapper">
                       
                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewBag.Error
                                </div>
                            }
                            <form method="post" asp-action="ResetPassword" asp-controller="Admin">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="input-style-1">
                                            <label for="newPassword" class="form-label">New Password</label>
                                            <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="Enter your new password" required>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-style-1">
                                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Re-enter your new password" required>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100">Change Password</button>
                                </div>
                            </form>
                            <p class="text-sm text-center mt-3">
                                <a asp-acion="Login" asp-controller="Admin" class="text-primary">Back to Login</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ========== Section End ========== -->
</body>
</html>