@{
    Layout = null;
}
@model WebApplication2.ViewModels.EmployeeDetailsViewModel


<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<!------ Include the above in your HEAD tag ---------->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication2</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-material-design@4.1.1/dist/css/bootstrap-material-design.min.css" integrity="sha384-wXznGJNEXNG1NFsbm0ugrLFMQPWswR3lds2VeinahP8N0zJw9VWSopbjv2x7WCvX" crossorigin="anonymous">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons">
    <link rel="stylesgeet" href="https://rawgit.com/creativetimofficial/material-kit/master/assets/css/material-kit.css">

    <link rel="stylesheet" href="~/css/styles.css" />

    <style>
        font-family: 'Poppins', sans-serif;
        letter-spacing: 1px;
        }

        .card {
            border-radius: 10px;
        }

        .card-title {
            font-family: 'Roboto', sans-serif;
            letter-spacing: 0.5px;
        }

        table th {
            width: 50%;
            text-align: center;
        }

        table td {
            width: 50%;
            text-align: center;
        }

        .btn-primary {
            font-size: 16px;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                transform: scale(1.05);
            }




        .btn-warning {
            margin-left: 10px;
        }

        body {
            margin-top: 20px;
            color: #1a202c;
            text-align: left;
            background-color: #f4f6f9;
            font-family: 'Roboto', sans-serif;
        }

        .navbar {
            margin-bottom: 20px;
        }

        .navbar .navbar-brand {
           font-weight: 500;
           text-align: center;
           color: darkgreen;
           margin-left:1rem;
        }

        .navbar .btn {
           font-size: 14px;
           font-weight: 600;
margin-right:1rem;
        }

        .main-body {
            padding: 15px;
        }

        .card {
            box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid rgba(0,0,0,.125);
            border-radius: .25rem;
        }

      
        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 20px;
        }

        .gutters-sm {
            margin-right: -8px;
            margin-left: -8px;
        }

            .gutters-sm > .col, .gutters-sm > [class*=col-] {
                padding-right: 8px;
                padding-left: 8px;
            }

        .mb-3, .my-3 {
            margin-bottom: 1rem !important;
        }

        .bg-gray-300 {
            background-color: #e2e8f0;
        }

        .h-100 {
            height: 100% !important;
        }

        .shadow-none {
            box-shadow: none !important;
        }

    </style>
</head>

<body class="profile-page">
    <div class="container">
        <div class="main-body">

            <!-- Breadcrumb -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">

                <a class="navbar-brand text-center" asp-action="EmployeeProfile" asp-controller="Home" style="margin-left:1rem;">Employee Profile</a>
                <div class="ml-auto">
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Logout", "Home")" role="button">Logout</a>
                   @*  <a class="btn btn-warning btn-sm ml-2" href="@Url.Action("ChangePassword", "Home")" role="button">Change Password</a> *@
                </div>
            </nav>
            <!-- /Breadcrumb -->

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="~/img/@ViewBag.ProfileImage" alt="Admin" class="rounded-circle" style="height:100px;">
                                <div class="mt-3">
                                    <h4>@Model.Name</h4>
                                    <p class="text-secondary mb-1">@Model.RoleName</p>
                                    <p class="text-muted font-size-sm">@Model.Address</p>
                                </div>
                                <!-- Profile Picture Upload Form -->
                                <form method="post" enctype="multipart/form-data" asp-action="UploadProfilePicture">
                                    <div class="mt-3">
                                        <input type="file" name="file" accept="image/*" />
                                        <button type="submit" class="btn btn-primary mt-2">Upload Picture</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="card h-80 mt-3">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github mr-2 icon-inline"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>Github</h6>
                                <span class="text-secondary">bootdey</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter mr-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>Twitter</h6>
                                <span class="text-secondary"></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram mr-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>Instagram</h6>
                                <span class="text-secondary">bootdey</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>Facebook</h6>
                                <span class="text-secondary">bootdey</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <i class="bi bi-person"></i>
                                    <h6 class="mb-0">Full Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                   @Model.Name
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <i class="bi bi-envelope"></i>
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Email
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <i class="bi bi-telephone"></i>
                                    <h6 class="mb-0">Phone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.ContactNo
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <i class="bi bi-cash"></i>
                                    <h6 class="mb-0">Salary</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                   @Model.Salary
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <i class="bi bi-geo-alt"></i>
                                    <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                   @Model.Address
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <a class="btn btn-info " asp-action="Update" asp-controller="Home" asp-route-id="@Model.EmpId">Edit</a>
                                    <a class="btn btn-warning ml-2" asp-action="ChangePassword" asp-controller="Home">Change Password</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row gutters-sm">
                        <div class="col-md-12 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2"></i>Additional Information</h6>
                                    <i class="bi bi-calendar-date"></i>
                                    <h6>Start Date</h6>
                                    <p class="text-muted">@Model.RandomStartDate.ToString("MM/dd/yyyy")</p>
                                    <i class="bi bi-cash-stack"></i>
                                    <h6>Remaining Amount</h6>
                                    <p class="text-muted">@Model.Remaining_Amount</p>
                                    <i class="bi bi-people-fill"></i>
                                    <h6>Role</h6>
                                    <p class="text-muted">@Model.RoleName</p>
                                    @if(Model.Status == 1)
                                    {
                                        <i class="bi bi-person-check"></i>
                                        <h6>Status</h6>
                                        <p class="text-muted">Active</p>
                                    }
                                    <i class="bi bi-envelope-paper"></i>
                                    <h6>Policy</h6>
                                    <p class="text-muted">@Model.PolicyName</p>
                                    @if (Model.PolicyDate == new DateTime(2000, 1, 15))
                                    {
                                        <h6>Policy Date</h6>
                                        <p class="text-muted">None</p>
                                    }
                                    else
                                    {
                                        <i class="bi bi-calendar"></i>
                                        <h6>Policy Date</h6>
                                    <p class="text-muted">@Model.PolicyDate</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer text-center ">
        <p>Made with <a href="https://demos.creative-tim.com/material-kit/index.html" target="_blank">Material Kit</a> by Creative Tim</p>
    </footer>

    <script src="https://unpkg.com/popper.js@1.12.6/dist/umd/popper.js" integrity="sha384-fA23ZRQ3G/J53mElWqVJEGJzU0sTs+SvzG8fXVWP+kJQ1lwFAOkcUOysnlKJC33U" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/bootstrap-material-design@4.1.1/dist/js/bootstrap-material-design.js" integrity="sha384-CauSuKpEqAFajSpkdjv3z9t8E7RlpJ1UP0lKM/+NdtSarroVKu069AlsRPKkFBz9" crossorigin="anonymous"></script>
    <script src="~/js/script.js"></script>

</body>

<script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
