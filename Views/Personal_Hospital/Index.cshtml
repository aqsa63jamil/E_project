

@{
    ViewData["Title"] = "Hospital Dashboard";

    Layout = "~/Views/Shared/_Hospital_Layout.cshtml";
}
@model IEnumerable<WebApplication2.Models.Per_Hospital>

<h2 class="mb-4 text-center">Hospital Dashboard</h2>

<div class="container">
    <div class="table-wrapper table-responsive shadow-sm rounded bg-white">
        <table class="table table-hover table-bordered align-middle">
            <thead class="thead-light">
                <tr class="text-center">
                    <th class="text-dark"><h6 class="text-sm text-medium mb-0">Total Beds</h6></th>
                    <th class="text-dark"><h6 class="text-sm text-medium mb-0">Active Beds</h6></th>
                    <th class="text-dark"><h6 class="text-sm text-medium mb-0">Total Doctors</h6></th>
                    <th class="text-dark"><h6 class="text-sm text-medium mb-0">Total Nurses</h6></th>
                    <th class="text-dark"><h6 class="text-sm text-medium mb-0">Actions</h6></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hospital in Model)
                { 
                    <tr class="text-center" style="background-color: #f9f9f9;">
                        <td><p class="text-sm mb-0">@hospital.TotalBeds</p></td>
                        <td><p class="text-sm mb-0">@hospital.ActiveBeds</p></td>
                        <td><p class="text-sm mb-0">@hospital.TotalDoctors</p></td>
                        <td><p class="text-sm mb-0">@hospital.TotalNurses</p></td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a href="@Url.Action("Edit", "Personal_Hospital", new { id = hospital.Id })" class="text-primary me-3">
                                    <i class="bi bi-pencil-square" style="font-size: 1.2rem;"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Personal_Hospital", new { id = hospital.Id })" class="text-danger">
                                    <i class="lni lni-trash-can" style="font-size: 1.2rem;"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                } 
            </tbody>
        </table>
    </div>
    <!-- Button to create new hospital -->
    <div class="d-flex justify-content-center mt-4">
        <a href="@Url.Action("Create", "PerHospital")" class="btn btn-outline-primary px-4 py-2">Create New Hospital</a>
    </div>
</div>