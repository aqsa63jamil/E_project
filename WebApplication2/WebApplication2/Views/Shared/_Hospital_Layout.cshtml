</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <i class="fas fa-hospital"></i>
                <h2 class="text-dark">MediCare</h2>
            </div>
            <nav class="sidebar-nav">
                <a asp-action="Hospital_Index" asp-controller="Hospital"><i class="fas fa-hospital"></i> Hospital</a>
                 <a asp-action="Create" asp-controller="Personal_Hospital"><i class="fas fa-plus-circle"></i> Create</a>
                @*<a asp-action="Edit" asp-controller="Personal_Hospital"><i class="fas fa-edit"></i> Edit</a> *@
                @* <a asp-action="Index" asp-controller="Personal_Hospital"><i class="fas fa-hospital"></i> Index</a> *@
               @*  <a asp-action="All_Record" asp-controller="Hospital"><i class="fas fa-file-invoice"></i> All Record</a> *@
                <a asp-action="Visit_Request" asp-controller="Hospital"><i class="fas fa-stethoscope"></i> Visit Table</a>
                <a asp-action="Treatment_Request" asp-controller="Hospital"><i class="fas fa-capsules"></i> Treatment Table</a>
                <a asp-action="CreateMedicalInvoice" asp-controller="Medical_Report"><i class="fas fa-file-invoice"></i> Discharge Table</a>
                <a asp-action="Logout" asp-controller="Hospital" class="text-danger"><i class="fas fa-file-invoice"></i> Logout</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Hero Section -->
            <section class="hero">
                <div class="hero-content">
                    <h1 class="animate__animated animate__fadeInDown">Hospital Management Dashboard</h1>
                    <p class="promo lead animate__animated animate__fadeInUp" style="animation-delay: 0.3s;">Welcome to our hospital! Start your journey with a personalized medical checkup 🏥 – <span id="current-time"></span></p>
                </div>
            </section>
            @RenderBody()
        </main>

        <!-- Mobile Menu Toggle Button -->
        <button class="mobile-menu-toggle">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Theme Toggle -->
        <div class="theme-toggle">
            <input type="checkbox" id="theme-switch">
            <label for="theme-switch">
                <i class="fas fa-sun"></i>
                <i class="fas fa-moon"></i>
            </label>
        </div>
    </div>
</body>
</html>
