 @using X.PagedList
@using X.PagedList.Mvc.Core
@model DashboardViewModel
<head>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Optional: Custom Styles -->
    <style>
        .card-body {
            padding: 1.5rem;
        }

        .patient-avatar {
            text-align: center;
            font-size: 2rem;
            color: #007bff;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .card-text {
            font-size: 1rem;
            color: #555;
        }

        .discharged-patients {
            margin-top: 20px;
        }

        .pagination {
            justify-content: center;
        }
    </style>
</head>

<section class="discharged-patients my-3">
    <h2 class="text-center mb-4">Recently Discharged</h2>
    <div class="row" style="max-height: 600px; overflow-y: auto;">
        <!-- Patient Card -->
        
         @if (Model.Payment != null && Model.Payment.Any())
         {
            foreach (var payment in Model.Payment.Take(6))
            {
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="patient-avatar mb-3">
                                <i class="fas fa-user-circle fa-2x"></i>
                            </div>
                            <h5 class="card-title">@payment.Emp_Name</h5>
                            <p class="text-muted"><strong>Email:</strong> @payment.Emp_Email</p>
                            <p class="text-muted">
                                <strong>Discharge Date:</strong>
                                @payment.CreateDate.ToString("MMMM dd, yyyy")
                            </p>
                        </div>
                    </div>
                </div>
            }
         }
        else
        {
            <div class="col-12 text-center">
                <p class="text-muted">No payment information available.</p>
            </div>
        }
    </div>
</section>
