@{
    Layout = null;
}
@model WebApplication2.ViewModels.EmployeeDetailsViewModel
<head>
    <style>
        .profile {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
            box-shadow: 0 0 2px 2px (#000);
        }

            .profile h1 {
                font-size: 24px;
                color: #333;
            }

            .profile h2 {
                font-size: 20px;
                margin-bottom: 20px;
                color: #555;
            }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th,
            .table td {
                padding: 10px;
                border: 1px solid #ddd;
            }

            .table th {
                background-color: #f2f2f2;
                text-align: left;
            }

        

        .btn a {
            display: inline-block;
            padding: 10px 15px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }

            .btn a:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="profile">
        <h1>Welcome, @Model.Name!</h1>
        <h2>Finance Manager Dashboard</h2>
        <p>Here you can manage financial tasks and view relevant statistics.</p>

        <table class="table">
            <tr>
                <th>Employee ID:</th>
                <td>@Model.EmpId</td>
            </tr>
            <tr>
                <th>Name:</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Role:</th>
                <td>@Model.RoleName</td>
            </tr>
            <tr>

                <td>
                    <form asp-action="Logout" asp-controller="Admin" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Logout</button>
                    </form>
                </td>
            </tr>
        </table>
    </div>
</body>
