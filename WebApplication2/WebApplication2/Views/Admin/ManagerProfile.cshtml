@{
    Layout = null;
}
@model WebApplication2.ViewModels.EmployeeDetailsViewModel
<head>
    <style>
        .profile {
            margin-bottom: 1rem;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

            .profile h1 {
                font-size: 24px;
                color: #333;
            }

            .profile h2 {
                font-size: 20px;
                margin-bottom: 20px;
                color: #555;
            }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th,
            .table td {
                padding: 10px;
                border: 1px solid #ddd;
            }

            .table th {
                background-color: #f2f2f2;
                text-align: left;
            }

        .access-denied {
            text-align: center;
            margin-top: 50px;
        }

            .access-denied h1 {
                font-size: 30px;
                color: #e74c3c;
            }

            .access-denied p {
                font-size: 18px;
                margin: 10px 0;
            }

        .btn {
            display: inline-block;
            padding: 10px 15px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }

            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<div class="profile">
    <h1>Welcome, @Model.Name!</h1>
    <h2>Manager Dashboard</h2>
    <p>Here you can manage teams, review projects, and oversee operations.</p>

    <table class="table">
        <tr>
            <th>Employee ID:</th>
            <td>@Model.EmpId</td>
        </tr>
        <tr>
            <th>Name:</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Email:</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Role:</th>
            <td>@Model.RoleName</td>
        </tr>
    </table>
</div>
