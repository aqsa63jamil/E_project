@model WebApplication2.Models.Per_Hospital

@{
    ViewData["Title"] = "Delete Hospital";

    Layout = "~/Views/Shared/_Hospital_Layout.cshtml";
}
@Html.Partial("_Notification")
<h2>Delete Hospital</h2>

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete Hospital</h2>
    <h4 class="text-center text-danger mb-3">Are you sure you want to delete this hospital?</h4>

    <div class="card shadow-lg p-4">
        <!-- Display hospital details -->
        <div class="mb-3">
            <h5><strong>@Model.TotalBeds</strong> Beds</h5>
            <p><strong>Active Beds:</strong> @Model.ActiveBeds</p>
            <p><strong>Total Doctors:</strong> @Model.TotalDoctors</p>
            <p><strong>Total Nurses:</strong> @Model.TotalNurses</p>
        </div>

        <!-- Confirmation Form -->
        <form method="post">
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-outline-danger btn-hover px-4 py-2">Delete</button>
                <a href="@Url.Action("Index", "Personal_Hospital")" class="btn btn-outline-secondary btn-hover px-4 py-2">Cancel</a>
            </div>
        </form>
    </div>
</div>