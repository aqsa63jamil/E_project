@model Medical_Invoice

@{
    ViewData["Title"] = "Create Medical Invoice";
    Layout = "~/Views/Shared/_Hospital_Layout.cshtml";
}
@Html.Partial("_Notification")
<div class="container mt-5">
    <div class="form-wrapper">
        <h2 class="text-center mb-4">Create Medical Invoice</h2>

        <form asp-action="CreateMedicalInvoice" method="post">
            <div class="container py-4 px-3 border rounded shadow-lg bg-light">
                <div class="row g-4">
                   <!-- Employee ID -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="EmpId" class="form-control" required />
                            <label for="EmpId" class="control-label">
                                <i class="fa fa-id-card" style="color: #595f69;"></i> Employee ID
                            </label>
                            <span asp-validation-for="EmpId" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Employee Name -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Emp_Name" class="form-control" required />
                            <label for="Emp_Name" class="control-label">
                                <i class="fa fa-user" style="color: #595f69;"></i> Employee Name
                            </label>
                            <span asp-validation-for="Emp_Name" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Employee Email -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Emp_Email" class="form-control" required />
                            <label for="Emp_Email" class="control-label">
                                <i class="fa fa-envelope" style="color: #595f69;"></i> Employee Email
                            </label>
                            <span asp-validation-for="Emp_Email" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Role Selection -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="RoleId" asp-items="ViewBag.RoleList" class="form-control" required>
                                <option value="">-- Select Role --</option>
                            </select>
                            <label for="RoleId" class="control-label">
                                <i class="fa fa-briefcase" style="color: #595f69;"></i> Role
                            </label>
                            <span asp-validation-for="RoleId" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- CreateDate -->
                    <div class="col-md-12">
                        <div class="form-floating">
                            <input asp-for="CreateDate" type="date" class="form-control" required />
                            <label for="CreateDate" class="control-label">
                                <i class="fa fa-calendar" style="color: #595f69;"></i> Create Date
                            </label>
                            <span asp-validation-for="CreateDate" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="col-md-12">
                        <div class="form-floating">
                            <textarea asp-for="Desc" class="form-control" rows="4" required></textarea>
                            <label for="Desc" class="control-label">
                                <i class="fa fa-pencil-alt" style="color: #595f69;"></i> Description
                            </label>
                            <span asp-validation-for="Desc" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Total Amount -->
                    <div class="col-md-12">
                        <div class="form-floating">
                            <input asp-for="TotalAmount" class="form-control" required />
                            <label for="TotalAmount" class="control-label">
                                <i class="fa fa-dollar-sign" style="color: #595f69;"></i> Total Amount
                            </label>
                            <span asp-validation-for="TotalAmount" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Form Submission -->
                    <div class="form-actions d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-primary btn-hover px-4 py-2">
                            <i class="fa fa-save"></i> Save Invoice
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>